<%- include('../global-templates/header',{title: 'Music-Box! Here You Can Upload Songs to Album data..',isAdmin: isAdmin,stylesheets:[]}); %>


<div class="toggle-container">
    <%- include('../global-templates/side-pannel',{linkNum: 2})%>
    <div class="context-box">
        <div class="container">
            <form action="" method="post" enctype="multipart/form-data">
                <div class="form-group multi-select-dropbox">
                    <label for="albumId">Select album ID to add songs</label>
                    <div class="selected-items">
                        <select style="display: none;" name="albumId">
                        </select>
                    </div>
                    <div class="chooser-panel">
                        <div class="chooserList">
                            <div class="form-group">
                                <input type="text" class="form-control" id="albumSelector"
                                    placeholder="Type album name to get form server">
                                <div class="items">
                                    <div class="found-items">
                                    </div>
                                    <div class="not-found">
                                        <div class="message">Nothing found</div>
                                        <a href="/admin/upload/album" class="btn btn-primary">Add artist Data</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="accordion" id="accordionExample">
                    <div class="card">
                        <div class="card-header" id="headingOne">
                            <h2 class="mb-0">
                                <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapse1"
                                    aria-expanded="true" aria-controls="collapseOne">
                                    song number 1
                                </button>
                            </h2>
                        </div>
        
                        <div id="collapse1" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="album-name">song name</label>
                                    <input type="text" class="form-control" name="songName1" id="song-name"
                                        aria-describedby="emailHelp">
                                </div>
                                <%- include('../components/multiple-choice',{label:'Singers',selectFieldName: 'singers1',values: []}) %>
        
                                <%- include('../components/multiple-choice',{label:'Lyricists',selectFieldName: 'lyricists1',values: []}) %>
        
        
        
                                <div class="form-group multiple-checkbox">
                                    <label for="slectionOfMood">Select song mood type</label>
                                    <div class="selected-items">
                                        <select name="moodNames1" multiple>
                                        </select>
                                        <li>Aggressive</li>
                                        <li>Bitter</li>
                                        <li>Bittersweet</li>
                                        <li>Bleak</li>
                                        <li>Dreamy</li>
                                        <li>Driving</li>
                                        <li>Elegant</li>
                                        <li>Epic</li>
                                        <li>Erotic</li>
                                        <li>Exotic</li>
                                        <li>Fun</li>
                                        <li>Gentle</li>
                                        <li>Gloomy</li>
                                        <li>Graceful</li>
                                        <li>Grim</li>
                                        <li>Sad</li>
                                        <li>Love</li>
                                        <li>Motivate</li>
                                        <li>Scary</li>
                                        <li>Spicy</li>
                                    </div>
                                    <div class="total-items">
                                        <div class="grouper">
                                            <li>Aggressive</li>
                                            <li>Bitter</li>
                                            <li>Bittersweet</li>
                                            <li>Bleak</li>
                                            <li>Dreamy</li>
                                            <li>Driving</li>
                                            <li>Elegant</li>
                                            <li>Epic</li>
                                            <li>Erotic</li>
                                            <li>Exotic</li>
                                            <li>Fun</li>
                                            <li>Gentle</li>
                                            <li>Gloomy</li>
                                            <li>Graceful</li>
                                            <li>Grim</li>
                                            <li>Sad</li>
                                            <li>Love</li>
                                            <li>Motivate</li>
                                            <li>Scary</li>
                                            <li>Spicy</li>
                                        </div>
                                    </div>
                                </div>
        
                                <div class="form-group">
                                    <label for="album-name">song URL</label>
                                    <input type="file" class="form-control" name="songURL1" aria-describedby="emailHelp">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary submit-btn input-ripple"
                    style="display: block;padding: 10px 55px; margin: 0 auto;margin-top: 20px;">Submit</button>
            </form>
            <div class="form-group container">
                <label for="appendSongs">Add songs to form list </label>
                <select class="form-control appendSongs" id="appendSongs">
                    <option>0</option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            </div>
        </div>
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Add Artist Data</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="artist-name">Artist Name</label>
                            <input type="text" class="form-control" id="artist-name">
                        </div>
                        <div class="form-group">
                            <label for="image-file">Image File</label>
                            <input type="file" class="form-control" id="artist-image">
                        </div>
                        <div class="progress" style="display: none;">
                            <div class="progress-bar progress-bar-striped" role="progressbar" style="width: 0%;"
                                aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <div class="alert" style="text-align: center;" role="alert">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" id="post-artist" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../global-templates/footer',error,success); %>